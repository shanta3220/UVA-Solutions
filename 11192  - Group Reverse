#include <iostream>
#include <string.h>
using namespace std;

int main() {
	char s[100];
	int n;
	while(cin >> n >> s && n != 0){
	    for(int i = 0; i < strlen(s); i += strlen(s)/n){
	        for( int j = i + strlen(s)/n -1; j >= i; j--)
	        cout << s[j];
	        if(s[i]=='\0')  break;
	    }
	       
	   	cout << "\n";
	}

	return 0;
}
